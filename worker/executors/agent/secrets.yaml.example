# Agent Secrets Configuration
# Copy this file to secrets.yaml and fill in your API keys
# This structure aligns with youtu-agent's standard environment variables

# =============================================
# LLM Configuration
# =============================================
# Primary LLM config (align with youtu-agent .env.full)
UTU_LLM_TYPE: "chat.completions"
UTU_LLM_MODEL: "deepseek-chat"  # or gpt-4, claude-3-sonnet-20240229, etc.
UTU_LLM_BASE_URL: "https://api.deepseek.com/v1"
UTU_LLM_API_KEY: "your-deepseek-api-key"

# Image LLM (optional)
UTU_IMAGE_LLM_TYPE: "chat.completions"
UTU_IMAGE_LLM_MODEL: "gpt-4-vision-preview"
UTU_IMAGE_LLM_BASE_URL: "https://api.openai.com/v1"
UTU_IMAGE_LLM_API_KEY: "your-openai-api-key"

# Audio LLM (optional)
UTU_AUDIO_LLM_MODEL: "whisper-1"
UTU_AUDIO_LLM_BASE_URL: "https://api.openai.com/v1"
UTU_AUDIO_LLM_API_KEY: "your-openai-api-key"

# Judge LLM (optional, for evaluation)
JUDGE_LLM_TYPE: "chat.completions"
JUDGE_LLM_MODEL: "gpt-4"
JUDGE_LLM_BASE_URL: "https://api.openai.com/v1"
JUDGE_LLM_API_KEY: "your-openai-api-key"

# =============================================
# Tools Configuration
# =============================================
# Search tool (serper.dev)
SERPER_API_KEY: "your-serper-api-key"

# Browser tool (jina.ai reader)
JINA_API_KEY: "your-jina-api-key"

# =============================================
# Database Configuration
# =============================================
# SQLite database for agent tracing and logs
DB_URL: "sqlite:///./results/agent.db"

# =============================================
# Tracing Configuration (optional)
# =============================================
# Phoenix tracing for debugging
PHOENIX_ENDPOINT: "http://localhost:6006/v1/traces"
PHOENIX_PROJECT_NAME: "flowmesh-agent"

# =============================================
# Misc Configuration
# =============================================
# Huggingface token for downloading datasets
HF_TOKEN: "your-hf-token"

# MCP memory file path
MCP_MEMORY_FILE_PATH: "/tmp/agent_memory.jsonl"